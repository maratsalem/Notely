<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.5" orientation="HORIZONTAL" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="notely.app.SceneController">
   <items>
      <VBox>
         <children>
            <Label text="Term:" />
            <TextField fx:id="termInput" />
            <Label text="Definition:" />
            <TextArea fx:id="definitionInput" />
            <Button mnemonicParsing="false" onAction="#switchToNotecardScene" text="Study" textAlignment="CENTER" translateX="250.0" translateY="10.0" />
            <Button text="Save" translateX="20.0" translateY="-15.0" />
         </children>
      </VBox>
      <VBox fx:id="cardPane">
         <children>
            <Label text="Term: [term goes here]" />
            <Label text="Definition: [definition goes here]" />
         </children>
      </VBox>
   </items>
</SplitPane>
